<UserControl x:Class="PanoramaApp2.MySettingsComment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="commentSetting">
    <Border Background="{Binding ElementName=commentSetting, Path=Settings.bannerBrush}">
        <TextBlock Text="{Binding author, Mode=OneTime}" Foreground="White" Width="auto" FontSize="{StaticResource PhoneFontSizeMedium}" TextWrapping="Wrap"/>
    </Border>
</UserControl>